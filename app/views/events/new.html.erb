<% provide(:title, 'Create Event') %>
<h1>Create Event</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :date %>
      <%= f.datetime_select :date, :ampm => true, :minute_step => 15 %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Create event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
